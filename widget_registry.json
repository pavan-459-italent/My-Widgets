              },
              {
                "value": "bordered",
                "label": "Bordered"
              }
            ]
          },
          {
            "name": "show_icons",
            "type": "select",
            "label": "Show Icons",
            "defaultValue": "yes",
            "options": [
              {
                "value": "yes",
                "label": "Yes"
              },
              {
                "value": "no",
                "label": "No"
              }
            ]
          }
        ]
      },
      "containers": [
        "Full width"
      ],
      "defaultConfig": {
        "cards_per_row": 3,
        "card_background": "#ffffff",
        "card_text_color": "#1f2937",
        "accent_color": "#3b82f6",
        "title_size": "medium",
        "card_style": "shadow",
        "show_icons": "yes"
