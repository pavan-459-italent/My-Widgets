{
  "version": "1.0.0",
  "title": "Card Grid",
  "description": "A configurable card grid widget demonstrating dynamic layout and styling options",
  "category": "Demo",
  "imageSrc": "thumbnail.png",
  "configuration": {
    "properties": [
      {
        "name": "cards_per_row",
        "type": "number",
        "label": "Cards Per Row",
        "defaultValue": 3,
        "rules": {
          "required": true,
          "minimum": 1,
          "maximum": 6
        }
      },
      {
        "name": "card_background",
        "type": "color",
        "label": "Card Background",
        "defaultValue": "#ffffff"
      },
      {
        "name": "card_text_color",
        "type": "color",
        "label": "Text Color",
        "defaultValue": "#1f2937"
      },
      {
        "name": "accent_color",
        "type": "color",
        "label": "Accent Color",
        "defaultValue": "#3b82f6"
      },
      {
        "name": "title_size",
        "type": "select",
        "label": "Title Size",
        "defaultValue": "medium",
        "options": [
          {
            "value": "small",
            "label": "Small"
          },
          {
            "value": "medium",
            "label": "Medium"
          },
          {
            "value": "large",
            "label": "Large"
          }
        ]
      },
      {
        "name": "card_style",
        "type": "select",
        "label": "Card Style",
        "defaultValue": "shadow",
        "options": [
          {
            "value": "flat",
            "label": "Flat"
          },
          {
            "value": "shadow",
            "label": "Shadow"
          },
          {
            "value": "bordered",
            "label": "Bordered"
          }
        ]
      },
      {
        "name": "show_icons",
        "type": "select",
        "label": "Show Icons",
        "defaultValue": "yes",
        "options": [
          {
            "value": "yes",
            "label": "Yes"
          },
          {
            "value": "no",
            "label": "No"
          }
        ]
      }
    ]
  },
  "defaultConfig": {
    "cards_per_row": 3,
    "card_background": "#ffffff",
    "card_text_color": "#1f2937",
    "accent_color": "#3b82f6",
    "title_size": "medium",
    "card_style": "shadow",
    "show_icons": "yes"
  },
  "source": {
    "path": "dist",
    "entry": "content.html"
  }
}
